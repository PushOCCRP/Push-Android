<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.push.meydan" >
    android:versionCode="8"
    android:versionName="0.9.1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.push.meydan.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- Needed for push notifications that contain VIBRATE flag. Optional, but recommended. -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="com.push.meydan.permission.C2D_MESSAGE"
        android:protectionLevel="normal" />

    <application
        android:name="com.push.meydan.PushApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name="com.push.meydan.AboutActivity"
            android:label="@string/title_activity_detail_post"
            android:theme="@style/MyMaterialTheme" >
        </activity>
        <activity
            android:name="com.push.meydan.DetailPostActivity"
            android:label="@string/title_activity_detail_post"
            android:theme="@style/MyMaterialTheme"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
        </activity>
        <activity
            android:name="com.push.meydan.YouTubeActivity"
            android:label="YouTube Player"
            android:theme="@style/MyMaterialTheme"
            />
        <activity
            android:name="com.push.meydan.NotificationHandler"
            android:label="@string/title_activity_detail_post"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/MyMaterialTheme" >
        </activity>
        <activity
            android:name="com.push.meydan.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Toolbar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Push Notifications -->
        <service android:name="com.infobip.push.PushActionService" />
        <service android:name="com.infobip.push.GcmService" />

        <receiver
            android:name="com.infobip.push.GcmReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.push.meydan" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.infobip.push.PushActionReceiver" />
        <receiver
            android:name="com.infobip.push.ConsistencyAlarmReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <!-- Push notifications -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="e8e3bbc2256c70be95a43e59ef78a0e1b312db75" />

        <!-- Hockey App -->
        <activity android:name="net.hockeyapp.android.UpdateActivity" />


    </application>

</manifest>
